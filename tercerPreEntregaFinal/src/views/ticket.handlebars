
<div class="card w-50 mx-auto bg-dark">
    <h1 class="card-header" id="{{user.cart}}">Ticket</h1>
    <h3 class="ms-5">User: {{user.name}}</h3>

    <div class="card-body">
        {{#each result.products }}
        <div class="card my-2">
            <div class="card-body">
                <h5 class="card-title ">Title: {{this._id.title}}</h5>
                <p class="card-text">Description: {{this._id.description}}</p>
                <p class="card-text">Category: {{this._id.category}}</p>
                <p class="card-text">Quantity: {{this.quantity}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <h3 id="totalBuy"></h3>
        <button class="btn btn-success" id="btnPurchaseCart">Purchase</button>
    </div>
</div>
<script src="js/ticket.front.js"></script>